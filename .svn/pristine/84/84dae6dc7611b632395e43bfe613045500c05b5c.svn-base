<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_white">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toolbar_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_return" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="9dp"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:text="管理钱包账户"
                android:textSize="16dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/appbar"
            android:paddingStart="14dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="14dp"
            android:gravity="center_vertical"
            android:background="@mipmap/bg_manager_item0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="24dp"
                tools:text="DNC.Park" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_addr"
            android:layout_below="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:paddingStart="23dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="公钥："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical"
                android:textIsSelectable="true"
                android:text=""
                android:textColor="#666666"
                tools:text="5Ka7RRK6Xsc5p4T5CVmcTcVZ8pgwCJ1is2ZwC3RSQFHJzaKAc1J"
                android:textSize="12dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_bak"
            android:layout_below="@+id/ll_addr"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingStart="23dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="备份私钥"
                android:textSize="15dp" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="11dp"
                android:padding="11dp"
                android:src="@mipmap/ic_manager_next"
                />

        </RelativeLayout>

        <TextView
            android:clickable="true"
            android:id="@+id/btn_remove"
            android:background="@drawable/shape_button_complete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="62dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:text="移除"
            />

    </RelativeLayout>
</layout>