<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewmodel"
            type="com.zlw.base.ui.vm.BaseViewModel" />
    </data>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:splitMotionEvents="false">

		<FrameLayout
			android:id="@+id/container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="60dp" />

		<View
			android:id="@+id/bottom_line"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_alignParentBottom="true" />

		<View
			android:layout_width="match_parent"
			android:layout_height="0.75dp"
			android:layout_above="@+id/bottom_line"
			android:background="#E5E9F2" />

		<RadioGroup
			android:id="@+id/bottom_view"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal">

			<RadioButton
				android:id="@+id/navigation_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginBottom="4dp"
				android:layout_weight="1"
				android:button="@null"
				android:checked="true"
				android:drawableTop="@drawable/selector_nav_wallet"
				android:drawablePadding="6dp"
				android:gravity="center"
				android:text="@string/title_wallet"
				android:textColor="@drawable/selector_bottom_navigation2"
				android:textSize="13dp" />

			<RadioButton
				android:id="@+id/navigation_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginBottom="4dp"
				android:layout_weight="1"
				android:button="@null"
				android:drawableTop="@drawable/selector_nav_merchandise"
				android:drawablePadding="6dp"
				android:gravity="center"
				android:text="@string/title_merchandise"
				android:textColor="@drawable/selector_bottom_navigation2"
				android:textSize="13dp" />

			<RadioButton
				android:id="@+id/navigation_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginBottom="4dp"
				android:layout_weight="1"
				android:button="@null"
				android:drawableTop="@drawable/selector_nav_apply"
				android:drawablePadding="6dp"
				android:gravity="center"
				android:text="@string/title_apply"
				android:textColor="@drawable/selector_bottom_navigation2"
				android:textSize="13dp" />

			<RadioButton
				android:id="@+id/navigation_4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginBottom="4dp"
				android:layout_weight="1"
				android:button="@null"
				android:drawableTop="@drawable/selector_nav_discover"
				android:drawablePadding="6dp"
				android:gravity="center"
				android:text="@string/title_discover"
				android:textColor="@drawable/selector_bottom_navigation2"
				android:textSize="13dp" />

		</RadioGroup>

	</RelativeLayout>

</layout>
